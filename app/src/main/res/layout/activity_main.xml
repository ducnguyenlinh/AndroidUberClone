<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rootLayout"
    tools:context="com.example.admin.androiduberclone.MainActivity">
    <LinearLayout
        android:layout_marginTop="30dp"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="U B E R"
            android:textColor="@android:color/white"
            android:textAlignment="center"
            android:textSize="36dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="PARTNER"
            android:textColor="@android:color/white"
            android:textAlignment="center"
            android:textSize="16dp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_rider_app"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:text="LOOKING FOR THE RIDER APP"
        android:textSize="12sp"
        android:textColor="@color/bottomText"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_above="@id/tv_rider_app">
        <Button
            android:id="@+id/btnSignIn"
            android:background="@drawable/btn_sign_in_background"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="SIGN IN"
            android:layout_marginRight="6dp"
            android:textColor="@android:color/white"
            tools:ignore="Suspicious0dp"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/btnRegister"
            android:background="@drawable/btn_register_background"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="REGISTER"
            android:layout_marginRight="6dp"
            android:textColor="@color/btnRegister"
            tools:ignore="Suspicious0dp"
            android:layout_weight="1"/>
    </LinearLayout>

</RelativeLayout>
